<div class = "category_head">
     <a href="<%= categories_path %>">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
    <h2 class="login-nav">New Category</h2>
    <a href="/logout">
        <i class="fa-solid fa-right-from-bracket"></i>
    </a>
</div>
<%= form_with(model: @category, url:categories_path) do |form| %>
    <div class= "form-container">
    <div>
        <%= form.text_field :name, placeholder: "Name" %>
        </div>

        <div>
        <%= form.file_field :icon %>
        </div>

        <div>
        <%= form.submit "Create", class: "submit-button" %>
        </div>
    </div>
<% end %>

<div class="forgot-pwd">
  <%= link_to "Back to categories", categories_path %>
</div>
